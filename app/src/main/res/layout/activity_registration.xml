<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bulksmso3"
    tools:context=".activities.RegistrationActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="20dp"
        android:elevation="10dp"

        app:cardBackgroundColor="@color/bt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <EditText
                android:layout_marginTop="12dp"
                android:id="@+id/Recusername"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edittextdes"
                android:ems="10"
                android:hint="Enter username"
                android:inputType="textPersonName"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@color/bt" />


            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/Recpassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/Recusername"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edittextdes"
                android:ems="10"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@color/bt" />
            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/Recconpassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/Recpassword"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/edittextdes"
                android:ems="10"
                android:hint="Verify  password"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@color/bt" />
            <EditText
                android:background="@drawable/edittextdes"
                android:layout_below="@id/Recconpassword"
                android:id="@+id/editTextPhoneNum"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:hint="Enter number"
                android:paddingStart="6dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_height="38dp"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="6dp" />

            <EditText
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:hint="Enter Email"
                android:paddingStart="6dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@drawable/edittextdes"
                android:layout_below="@id/editTextPhoneNum"
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:paddingLeft="6dp" />

            <Button
                android:id="@+id/RecsingInBut"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:text="sign up"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextTextEmailAddress"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="10dp" />

            <RelativeLayout
                android:id="@+id/rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RecsingInBut"
                android:layout_marginTop="27dp"
                >

                <TextView

                    android:id="@+id/signin"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="already have account ?"
                    android:textSize="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>